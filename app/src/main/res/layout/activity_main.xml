<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewSacyr"
        android:layout_width="151dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/textViewDatosPersonales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/id_card_ex"
        tools:srcCompat="@drawable/id_card_ex" />

    <TextView
        android:id="@+id/textViewDatosPersonales"
        android:layout_width="182dp"
        android:layout_height="101dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed"
        android:padding="2dp"
        android:scrollbars="none"
        android:text="Michael Born. Construction Department"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewSacyr"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textViewAviso"
        android:layout_width="343dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/borde"
        android:fontFamily="sans-serif-smallcaps"
        android:scrollbars="vertical"
        android:text="1234567890"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSacyr" />

    <FrameLayout
        android:id="@+id/contenedorFraments"
        android:layout_width="342dp"
        android:layout_height="229dp"
        android:layout_margin="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAviso">

    </FrameLayout>

    <RadioButton
        android:id="@+id/radioButtonGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:checked="false"
        android:clickable="false"
        android:padding="2dp"
        android:text="GPS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toggleButtonAlarmaProximidad"
        app:layout_constraintStart_toEndOf="@+id/radioButtonGPRS" />

    <RadioButton
        android:id="@+id/radioButtonGPRS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:checked="false"
        android:clickable="false"
        android:text="MQTT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/radioButtonGPS"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButtonAlarmaProximidad"
        android:layout_width="153dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:checked="true"
        android:text="ToggleButton"
        android:textOff="PROXIMIDAD OFF"
        android:textOn="PROXIMIDAD ON"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioButtonGPS" />

    <ImageButton
        android:id="@+id/imageButtonPanic"
        android:layout_width="158dp"
        android:layout_height="145dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contenedorFraments"
        app:srcCompat="@drawable/panic" />

</androidx.constraintlayout.widget.ConstraintLayout>